@model IEnumerable<PlataformaVIA.Core.Domain.AdministradorDocumentos.ImagenesInstructivo>

@{
    Layout = null;
}

<head>
    @* Adjust the viewport width as per device width for mobile *@
    <meta name="viewport" content=" width=device-width, initial-scale=1.0" />
</head>
<link href="~/Content/bootstrap.css" rel="stylesheet">


<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button class="close" aria-hidden="true" type="button" data-dismiss="modal">×</button>
            <h3 class="modal-title" id="myModalLabel">Instructivo</h3>
        </div>
        <div class="modal-body">
            <div id="imageCarousel" class="carousel slide" data-interval="7000"
                 data-ride="carousel" data-pause="hover" data-wrap="true">
                <ol class="carousel-indicators">
                    @for (int i = 0; i < Model.ToList().Count; i++)
                    {
                        string active = "";
                        active = i == 0 ? "active" : "";
                        <li data-target="#imageCarousel" data-slide-to="@i" class="@active btn-outline-danger"></li>
                    }
                </ol>
                <div class="carousel-inner">
                    @for (int i = 0; i < Model.ToList().Count; i++)
                    {
                        string active = "";
                        active = i == 0 ? "active" : "";

                        <div class='item @active'>
                            <img src="/AdministradorDocumentos/MostrarArchivo/?ubicacion=@Model.ToList()[i].Ubicacion" class="img-responsive marCenter">
                            <div class="carousel-caption">
                                <h3></h3>
                            </div>
                        </div>
                    }
                </div>

                <a href="#imageCarousel" class="carousel-control left" data-slide="prev">
                    <span class="glyphicon glyphicon-hand-left"></span>
                </a>
                <a href="#imageCarousel" class="carousel-control right" data-slide="next">
                    <span class="glyphicon glyphicon-hand-right"></span>
                </a>
            </div>
        </div>
    </div>
</div>



<footer></footer>

<script type="text/javascript">


    function CargaImagen(id, ubicacionFile) {   
        var url = '/AdministradorDocumentos/MostrarArchivo/?ubicacion=' + ubicacionFile

        $("#"+id).attr("src", url);
    }

</script>
