@model PlataformaVIA.Presentacion.ViewModels.BusquedaAvanzada.BusquedaAvanzadaPagosAjustesFiltroViewModel
@{
    Layout = null;
}

<meta name="viewport" content=" width=device-width, initial-scale=1.0" />

@using (Html.BeginForm("GetFiltroAvanzadoPagosFiltros", "RepresentanteLegal", FormMethod.Post, new { id = "frmPaymentsAdvancedSearch", @class = "form-horizontal dvCentro mt-2", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row text-center">
        <p class="col-md-4">
            @Html.DropDownListFor(model => model.CodCicloFacturacion, Model.CicloFacturacionList, "Seleccionar Ciclo de Facturación", new { @class = "form-control mx-2 mb-2" })
            @Html.ValidationMessageFor(model => model.CodCicloFacturacion, "", new { @class = "text-danger" })
        </p>
        @if (User.IsInRole("Funcionario"))
        {
            <p class="col-md-4">
                @Html.DropDownListFor(model => model.CodTipoFiltro, Model.TipoFiltroList, "Seleccionar Tipo Filtro", new { @class = "form-control mx-2 mb-2" })
            </p>
        }
        <p class="col-md-5">
            @Html.TextBoxFor(model => model.Valor, new { @class = "form-control" })
        </p>
        <p class="col-md-2">
            <button type="button" class="btn btn-info" id="btnBuscar">Buscar</button>
        </p>
    </div>
}

<script>
    $(document).ready(function () {
        $("#Valor").keydown(function (event) {
            if (event.keyCode === 10 || event.keyCOde === 13) {
                event.preventDefault();
                return false;
            }
        })
    })
</script>
