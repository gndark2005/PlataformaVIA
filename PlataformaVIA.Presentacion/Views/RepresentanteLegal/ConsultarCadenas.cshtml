@*@model IEnumerable<PlataformaVIA.Core.Domain.Cadena.Cadena>*@

<div class="col-md-12">
    <div class="panel panel-primary list-panel" id="list-panel">
        <div class="panel-heading list-panel-heading">
            <h1 class="panel-title list-panel-title">Mis cadenas</h1>
        </div>
        <div class="panel-body">
            <table id="cadena-data-table"
                   class="table table-striped table-bordered"
                   style="width:100%">
            </table>
        </div>
    </div>
</div>

@*@Html.Action("AdvancedSearch")*@

@section Scripts
{
    <script type="text/javascript">
        var cadenasListVM;


        $(function () {
            cadenasListVM = {
                dt: null,

                init: function () {
                    dt = $('#cadena-data-table').DataTable({
                        "serverSide": true,
                        "processing": true,
                        "rowHeight": 'auto',
                        //"ordering": false,
                        "oLanguage": language['dataTableParameters'],
                        "ajax": {
                            type: 'POST',
                            "url":
                               "@Url.Action("GetFiltroBasicoCadenas", "Cadena")"
                        },
                        "columns": [
                            {
                                "mData": null,
                                "bSortable": false,
                                "mRender": function (data, type, full) {
                                    return "<a class='py-0 text text--color--white border border--right' href='@Url.Action("Details", "PuntoDeVenta")/" + data.Id + "'" + "><i class='fa fa-search'></i></a>";
                                    //btn btn--solid
                                }
                            },
                            {
                                "title": "ID",
                                "data": "Id",
                                "searchable": false,
                                "visible": false
                            },
                            {
                                "title": "Código",
                                "data": "CodigoCadena",
                                "searchable": true
                            },
                            {
                                "title": "Nombre",
                                "data": "Nombre",
                                "searchable": true
                            },
                            {
                                "title": "Tipo de Cadena",
                                "data": "TipoCadena",
                                "searchable": true
                            },
                            {
                                "title": "PDV Cabeza de cadena",
                                "data": "CodigoCabezaCadena",
                                "searchable": true
                            },
                            {
                                "title": "Cant. de PDV",
                                "data": "NumeroPuntosVenta",
                                "searchable": true
                            },
                            {
                                "title": "Días de Mora",
                                "data": "DiasMora",
                                "searchable": true
                            },
                            {
                                "title": "Saldo Total",
                                "data": "SaldoTotal",
                                render: $.fn.dataTable.render.number(',', '.', 2, '$'),
                                "searchable": true
                            },
                          
                        ],
                        "lengthMenu": [[10, 25, 50, 100], [10, 25, 50, 100]]
                    });
                }
            };
            // initialize the datatables
            cadenasListVM.init();

        });

    </script>
}