@model IEnumerable<PlataformaVIA.Core.Domain.PuntoDeVenta.ResumenPagosRetirosSemanaActual>

@*<h4>RESUMEN PAGOS Y RETIROS</h4>*@

<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TipoIdentificacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CuentaBancaria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaPago)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Referencia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TipoIdentificacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CuentaBancaria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaPago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Referencia)
            </td>
            <td class="text-right">
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
        </tr>
    }

    <tr>
        <td colspan="4">
            <span><b>Total Pagos y Retiros</b></span>
        </td>
        <td class="text-right">
            <span><b>@Model.Sum(mm => mm.Valor).ToString("C")</b></span>
        </td>
    </tr>

</table>
