@model IEnumerable<PlataformaVIA.Core.Domain.PuntoDeVenta.ResumenAjustesCartera>
@*<h4>RESUMEN AJUSTES EN CARTERA</h4>*@
<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoriaAjuste)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Observacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaAplicacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoriaAjuste)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaAplicacion)
            </td>
            <td class="text-right">
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
        </tr>
    }
    <tr>
        <td colspan="3">
            <span><b>Total Ajustes</b></span>
        </td>
        <td class="text-right">
            <span><b>@Model.Sum(mm => mm.Valor).ToString("C")</b></span>            
        </td>
    </tr>

</table>
