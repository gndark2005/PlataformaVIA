@model IEnumerable<PlataformaVIA.Core.Domain.PuntoDeVenta.ResumenCuadreSemanal>
<h4>@*RESUMEN VENTAS AJUSTES FACTURACIÓN PREMIOS SEMANA ACTUAL*@</h4>

<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LineaDeNegocio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LineaDeNegocio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td class="text-right">
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
        </tr>
    }

    <tr>
        <td colspan="3">
            <span><b>Total Resumen</b></span>
        </td>
        <td class="text-right">
            <span><b>@Model.Sum(mm => mm.Valor).ToString("C")</b></span>
        </td>
    </tr>

</table>