                   <div class="row textoCentro marto15">
                        <span class="col-md-4"></span>
                        <input type="submit" id="btnEditar" class="btn btn-primary mensajeNota col-md-3" value="Editar" />
                        <input type="button" id="btnCerrar" style="display:none;" class="btn btn-info" data-dismiss="modal" aria-label="Close" value="Cerrar" />
                        <input type="button" id="btnCancelar" class="btn btn-danger mensajeNota col-md-3" data-dismiss="modal" aria-label="Close" value="Cancelar" />
                    </div>
                    <div class="row textoCentro">
