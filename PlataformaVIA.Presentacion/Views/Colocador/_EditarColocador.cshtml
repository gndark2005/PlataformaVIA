                            @Html.ValidationMessageFor(model => model.NumeroIdentificacion, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row  mt-2">
                        <div class="col-md-4  text font-weight-bold">@Html.DisplayNameFor(model => model.CiudadExpedicionCedula)</div>
