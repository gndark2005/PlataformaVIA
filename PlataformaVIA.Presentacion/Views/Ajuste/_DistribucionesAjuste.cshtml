@model IEnumerable<PlataformaVIA.Core.Domain.PuntoDeVenta.DistribucionAjuste>

@{
    ViewBag.Title = "Distribuciones de Ajuste";
}

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button class="close" aria-hidden="true" type="button" data-dismiss="modal">×</button>
            <h4 class="modal-title" id="myModalLabel">Distribución de Ajuste</h4>
        </div>
        <div class="modal-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.CodigoPuntoDeVenta)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CodigoCadena)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FacturasDepositos)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PinesRecargas)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Total)
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CodigoPuntoDeVenta)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CodigoCadena)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FacturasDepositos)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PinesRecargas)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Total)
                            </td>
                        </tr>
                    }

                </table>

                <a href="@Url.Action("ExportExcel","Ajuste", new { @codAjuste = ViewBag.CodAjuste })">Exportar a Excel</a>
            </div>                       
        </div>
    </div>
</div>

