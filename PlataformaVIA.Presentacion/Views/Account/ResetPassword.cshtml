@model PlataformaVIA.Presentacion.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Cambio de contraseña";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}
<div class="container center col-md-8 ml-auto">
    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", autocomplete = "off" }))
    {
        @Html.AntiForgeryToken()
        <h4>Cambio de contraseña</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Code)
        <div class="form-group row">
            @Html.LabelFor(m => m.Email, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-6">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger validationMessage", Placeholder = "Correo Electrónico", autocomplete = "nope" })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.Password, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-6">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger validationMessage", Placeholder = "Contraseña", autocomplete = "new-password" })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-6">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger validationMessage", Placeholder = "Confirmación de contraseña", autocomplete = "new-password" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-3"></div>
            <div class="col-md-6 col-md-offset-5">
                <input type="submit" value="Cambiar contraseña" class="btn btn-primary btn-block" />
            </div>
        </div>
    }
</div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
