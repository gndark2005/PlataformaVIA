@model PlataformaVIA.Presentacion.Models.ForgotPasswordViewModel
@{
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
    ViewBag.Title = "Ha olvidado su contraseña?";
}
<div class="container center col-md-8 ml-auto">

    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", autocomplete = "off" }))
    {
        @Html.AntiForgeryToken()
        <h4>Ingrese su dirección de correo electrónico.</h4>
        <hr />
        <div class="form-group row">
            @Html.LabelFor(m => m.Email, new { @class = "col-sm-3 col-form-label", Placeholder = "Correo Electrónico", autocomplete = "nope" })
            <div class="col-sm-6">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger validationMessage" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3"></div>
            <div class="col-md-6 col-md-offset-5">
                <input type="submit" value="Enviar correo" class="btn btn-primary btn-block" />
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
