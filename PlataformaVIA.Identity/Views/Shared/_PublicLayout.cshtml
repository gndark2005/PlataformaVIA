<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title - Plataforma VIA</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 logo">
                        <img src="@Url.Content("~/Content/img/logo.png")">
                    </div>
                    <div class="col-sm-6 iconos">
                        <div>
                            <a href="#"><img src="@Url.Content("~/Content/img/contacto.png")" alt="contactanos" title="contacto"> </a>
                            <div class="textIconos">
                                <span> Contacto </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container " style="background-color: ;">
            @RenderBody()
            <footer>
                <p>&copy; @DateTime.Now.Year - IGT</p>
            </footer>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
