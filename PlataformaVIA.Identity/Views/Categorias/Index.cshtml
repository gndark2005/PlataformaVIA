@model IEnumerable<PlataformaVIA.Core.Domain.PruebasAzure.Categoria>

@{
    ViewBag.Title = "IGT";
}

<h2>Categorías de prueba</h2>

<p>
    @Html.ActionLink("Crear uno nuevo", "Create",new { }, new {@class = "btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id_Categoria }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Ver Detalles", "Details", new { id=item.Id_Categoria }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id_Categoria }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
